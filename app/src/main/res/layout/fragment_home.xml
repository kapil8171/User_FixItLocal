<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:background="#C5CFF1"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/homefrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/domine"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/hor_Ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/imageView5"
                android:layout_height="30dp"
                android:src="@drawable/location_image"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IIIT UNA"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/domine"/>

            <ImageView
                android:id="@+id/dropDownImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/drop_downimg"/>

            <ImageView
                android:id="@+id/menu_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_menu_24"
                android:layout_marginStart="160dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:iconifiedByDefault="false"
            app:queryHint="search your Service"
            android:background="@drawable/white_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/Hor_Ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#SpecialForYou "
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/domine"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="See all "-->
<!--                android:textSize="16sp"-->
<!--                android:layout_marginStart="140dp"-->
<!--                android:fontFamily="@font/domine"-->
<!--                android:layout_marginTop="10dp"/>-->

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#ADB9E1"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_horizontal"
            android:elevation="15dp"
            app:cardCornerRadius="10dp"
            android:visibility="visible">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="180dp"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_delay="1000"
                app:iss_text_color="#CFE310"
                app:iss_text_align="CENTER"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/Hor_Ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Categories"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/domine"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/seeAll_Categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textSize="20sp"
                android:fontFamily="@font/domine"
                android:layout_marginStart="140dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#ADB9E1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Hor_Ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="8dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/CarpenterLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/carpenter"/>
                        <TextView
                            android:id="@+id/carpenterText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:text="Carpenter"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/plumberLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/plumber_serve"/>
                        <TextView
                            android:id="@+id/plumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="1dp"
                            android:text="Plumber"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ElectricianLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/electrician_serve"/>

                        <TextView
                            android:id="@+id/electricianText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="1dp"
                            android:text="Electrician"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PainterLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/painter_serve"/>

                        <TextView
                            android:id="@+id/painterText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:text="Painter"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Hor_Ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingEnd="8dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/AC_ServiceLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ac_serve"/>

                        <TextView
                            android:id="@+id/AC_ServiceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:text="AC Service"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cleanerLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:clickable="true"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/cleaner_image"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/cleaner_serve"/>

                        <TextView
                            android:id="@+id/cleanerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="1dp"
                            android:text="Cleaner"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Other_applianceLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:src="@drawable/appliance_repair_serve"/>
                        <TextView
                            android:id="@+id/applianceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:text=" Appliance"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/carpenter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:text="Carpenter"
                            android:fontFamily="@font/domine"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="600dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="end"
        app:menu="@menu/nd_menu"
        app:headerLayout="@layout/nd_header">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
